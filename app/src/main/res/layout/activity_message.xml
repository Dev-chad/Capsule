<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.teamnova.chad.capsule.MessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/ibtn_follow"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/image_btn_people" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />

        <ImageButton
            android:id="@+id/ibtn_chat"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:src="@mipmap/image_btn_chat" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_follow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <ListView
            android:id="@+id/list_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </ListView>

        <TextView
            android:id="@+id/text_no_follow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="아직 팔로우한 유저가 없습니다.\n메시지는 팔로우한 유저에게만 보낼 수 있습니다."/>
        <TextView
            android:id="@+id/text_no_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="메시지가 존재하지 않습니다."/>
    </RelativeLayout>




</LinearLayout>
