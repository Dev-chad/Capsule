<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="kr.co.teamnova.chad.capsule.ChatActivity">

    <RelativeLayout
        android:id="@+id/layout_login_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/text_login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#ffff9900"
            android:layout_marginTop="2dp"
            android:maxEms="13"
            android:padding="5dp"
            android:text="안녕하세요" />

        <TextView
            android:id="@+id/text_login_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/text_login_user"
            android:layout_below="@id/text_login_user"
            android:text="12시 56분"
            android:textSize="9sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_someone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@drawable/frame_round"/>

        <TextView
            android:id="@+id/text_someone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_profile"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:background="#ffaa9900"
            android:maxEms="13"
            android:padding="5dp"
            android:text="안녕하세요" />

        <TextView
            android:id="@+id/text_someone_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/text_someone"
            android:layout_below="@id/text_someone"
            android:text="12시 56분"
            android:textSize="9sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/layout_login_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#22000000"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2016년 5월 5일 목요일"
            android:textSize="11sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#22000000"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


</RelativeLayout>
