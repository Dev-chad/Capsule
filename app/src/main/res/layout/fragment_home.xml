<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/frame_round"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/image_profile"
            android:text="Michael jackson"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_content_count_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_profile"
            android:layout_alignStart="@id/text_nickname"
            android:text="@string/str_total_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_profile"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/text_content_count_const"
            android:text=""
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@id/layout_profile"
        android:background="@drawable/shadow" />

    <ImageButton
        android:id="@+id/ibtn_open"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@id/view_line"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/image_arrow_above" />

    <ListView
        android:id="@+id/listView_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line"
        android:paddingBottom="20dp"
        android:divider="#dddddd"
        android:dividerHeight="15dp">

    </ListView>

    <TextView
        android:id="@+id/text_nothing_content_const"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_profile"
        android:gravity="center"
        android:text="아직 게시물이 없습니다."
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>